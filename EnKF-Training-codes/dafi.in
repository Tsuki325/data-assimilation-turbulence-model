
dafi:
    model_file: nnfoam.py
    inverse_method: EnKF
    nsamples: 15
    max_iterations: 50
    rand_seed: 1
    verbosity: 2
    convergence_option: max # discrepancy
    save_level: iter
    analysis_to_obs: False
    #relstddev: 0.008
    #absstddev: 0.000001

inverse:

    penalties_python_file: penalties.py
    inflation_flag: 0
    localization_flag: 0
    nstate: 501
    nobs: 596
    alpha: 1.1
    beta: 0.9
    tau: 3
    gamma: 0.8

model:
    foam_case: inputs/foam_base
    iteration_nstep: 1000
    weight_baseline_file: inputs/w.6148
    nut_base_foamfile: inputs/foam_base/case1/0/nut
    ncpu: 30
    obs_file: inputs/data
    iteration_step_length: 1.0

    # architecture
    nscalar_invariants: 6
    nbasis_tensors: 1
    nhlayers:  4
    nnodes:  8
    g_init: [1]
    g_scale: [1]  #[betann,Prt]

    # data-preprocessing
    preproc_class: Scale

    # debug
    fixed_inputs: False

    # training flows and measurements
    parallel: False
    rel_stddev: 0.1
    abs_stddev: 0.01
    obs_rel_std: 0.01
    obs_abs_std: 0.001
